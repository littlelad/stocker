<h1>Home</h1>

<%= form_tag root_path, :method => 'POST' do %>
    <div class="form-group">
        <%= text_field_tag 'id', nil, placeholder: 'Enter company ticket symbol', size: 50, clas: 'form-control' %>
        <%= submit_tag 'Submit', class: 'btn btn-success'%>
    </div>
<% end %>

<% if @stock %>
    <%= @stock.company_name %><br>
    <%= @stock.latest_price %><br>
    <%= @stock.latest_time %>
<% elsif @nothing %>
    <%= @nothing %>
<% elsif @error %>
    <%= @error %>
<% end %>



